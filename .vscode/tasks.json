{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/shaders/*.cpp",
                "${workspaceFolder}/textures/*.cpp",
                "${workspaceFolder}/code/sun.cpp",
                "${workspaceFolder}/code/planets.cpp",
                "${workspaceFolder}/code/util.cpp",
                "${workspaceFolder}/code/stars.cpp",
                "${fileDirname}/${fileBasename}",
                "${workspaceFolder}/includes/*.c",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-lGL",
                "-lglfw",
                "-lGLEW",
                "-lglut",
                "-lSOIL"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}